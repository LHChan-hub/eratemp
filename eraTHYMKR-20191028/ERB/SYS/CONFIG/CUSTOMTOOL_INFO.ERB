;=======================================;
;CUSTOMTOOL_INFO_DEVELOPED_PLUS : 特製品開発済アイテム表示
;引数
;FLAG 1110 : 対象キャラ番号
;戻値
;RETURN : 0固定
;LOCAL変数
; 0～89 : 開発中道具の存在フラグ(引数)
; 90    : COUNTの受け皿
; 91    : 特殊な名前使用時の横表示数 (デフォルト：3)
; 92    : 特殊な名前使用時の文字数   (デフォルト：25)
; 93    : 現在の横表示数
; 94    : 今回の文字数
; 95    : 今回の必要枠数
; 96    : 特殊な名前の使用状況(SPECIALNAME_CUSTOMTOOL戻り値)
; 97    : テンポラリ(今回の文字数%(特殊な名前使用時の文字数+1))
; 98    : 対象キャラ番号受け皿
;=======================================;
@CUSTOMTOOL_INFO_DEVELOPED_PLUS
PRINTL 개발된 특제품 조교 도구
LOCAL:91 = 3
LOCAL:92 = 25
LOCAL:93 = 0
LOCAL:98 = FLAG:1110
REPEAT 90
    LOCAL:90 = COUNT
    IF LOCAL:(LOCAL:90) == 1
        ;特殊な名前を使うか否かで処理が変わる
        IF FLAG:1100 & 2
            ;特製品に特殊な名前を使う場合
            FLAG:1111 = LOCAL:98
            FLAG:1110 = COUNT
            CALL SPECIALNAME_CUSTOMTOOL
            LOCAL:96 = RESULT
            IF LOCAL:96
                IF FLAG:1100 & 4
                    ;アイテム番号併記の場合
                    IF LOCAL:90 < 10
                        LOCALS = %COM_TOOL_NAME%(No.0{LOCAL:90})
                    ELSE
                        LOCALS = %COM_TOOL_NAME%(No.{LOCAL:90})
                    ENDIF
                ELSE
                    ;本来の調教道具名併記の場合
                    LOCALS = %COM_TOOL_NAME%(%ITEMNAME:(LOCAL:90)%)
                ENDIF
            ELSE
                IF FLAG:1100 & 4
                    ;アイテム番号併記の場合
                    IF LOCAL:90 < 10
                        LOCALS = %ITEMNAME:(LOCAL:90)%(No.{LOCAL:90})
                    ELSE
                        LOCALS = %ITEMNAME:(LOCAL:90)%(No.{LOCAL:90})
                    ENDIF
                ELSE
                    ;本来の調教道具名併記の場合は併記なし
                    LOCALS = %ITEMNAME:(LOCAL:90)%
                ENDIF
            ENDIF
            STRLENS LOCALS
            LOCAL:94 = RESULT
            LOCAL:95 = (LOCAL:94 / (LOCAL:92 + 1)) + ((LOCAL:94 % (LOCAL:92 + 1)) > 0)
            SIF LOCAL:93 > 0 && LOCAL:91 < (LOCAL:93 + LOCAL:95)
                PRINTL 
            PRINTFORM %LOCALS%
            LOCAL:93 += LOCAL:95
            IF LOCAL:93 >= LOCAL:91
                PRINTL 
                LOCAL:93 = 0
            ELSE
                LOCAL:97 = LOCAL:94 % (LOCAL:92 + 1)
                FLAG:1110 = LOCAL:92 - LOCAL:97
                CALL SPACER
            ENDIF
        ELSE
            ;特製品に特殊な名前を使わない場合
            PRINTFORML %ITEMNAME:(LOCAL:90)%
        ENDIF
    ENDIF
    COUNT = LOCAL:90
REND
IF (FLAG:1100 & 2) && (LOCAL:93 > 0)
    PRINTL 
ENDIF
CALL NEW_DRAWLINE
RETURN 0
